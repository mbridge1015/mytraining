<% include ./common/header %>
<% include ./common/navbar %>
    <div class="container">
        <div class="starter-template">
            <h1>ブランチを更新します <input type="button" class="btn btn-primary btn-lg" value="Go Back" onClick="location.href='/git'"></h1>           
            <div class="form-group">
                <label class="col-md-3 control-label" for="inputtext">ブランチ名</label>
                <div class="col-md-9">
                    <input type="text" name="title" class="form-control" value="<%= mdata.title %>" disabled>
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label" for="inputtext">内容</label>
                <div class="col-md-9">
                    <textarea rows="5" name="body" class="form-control"><%= mdata.body %></textarea>
                </div>
            </div>
            <div style="display:inline-flex">
                <div class="col-md-6">
                    <form class="form-horizontal" method="post" action="/gitEdit/update/<%= mdata.title %>?_method=PUT">
                        <input type="hidden" name="_csrf" value="<%= csrftoken %>">
                        <input type="submit" class="btn btn-info btn-lg" value="Update!">
                    </form>
                </div>
                <div class="col-md-6">
                    <form class="form-horizontal" method="post" action="/git/delete/<%= mdata.title %>?_method=DELETE">
                        <input type="hidden" name="_csrf" value="<%= csrftoken %>">
                        <input type="submit" class="btn btn-danger btn-lg" value="Del">
                    </form>
                </div>
            </div>
        </div>
    </div>
<% include ./common/footer %>